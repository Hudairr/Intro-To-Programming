~~~~~~ Print Numbers from 1 to a 1000 ~~~~~~

#include <iostream>
using namespace std;
int main()
{
	int count = 1;
	while (count <= 1000) {
		cout << count << endl;
		count++;
	}
}

~~~~~~ Print Countdown to User-Entered Number

#include <iostream>
using namespace std;
int main() {
	cout << "Enter a whole number:  " << endl; int usernum;
	cin >> usernum;

	int count = 1;
	while (true) {
		cout << count << endl;
		if (count == usernum) {
			break;
		}
		count++;
	}
}

~~~~~~~ Super Secure banking ~~~~~~

#include<iostream>
#include<string.h>
using namespace std;
int main() {
	string p = "1234password";
	string userinput;
	do {
		cout << "Enter your password: ";
		cin >> userinput;

	} while (p != userinput);
	cout << "Welcome to the super secure bandking area!!!!" ;
}

~~~~~~ Super Secure Banking with a while loop ~~~~~~

#include<iostream>
#include<string.h>
using namespace std;
int main() {
	string p = "1234password";
	string userinput;
	cout << "Enter your password: ";
	cin >> userinput;
	while (p != userinput) {
		cout << "Enter your password: ";
		cin >> userinput;

	} 
	cout << "Welcome to the super secure banking area!!!!" ;
}
