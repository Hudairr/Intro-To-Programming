- S L I D E # 20 -
#include <iostream>
#include <string.h>
using namespace std;
int main()
{
	bool myBirthday = true;  
	int age = 17;
	if (myBirthday == true) {
		age++;
		cout << "It is my birthday.\n I am " << age << " years old";
	}else {
		cout << "\n It is not my birthday" << endl;
	}
}

